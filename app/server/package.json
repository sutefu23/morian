{
  "name": "frourio-app-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run migrate:dev && run-p dev:*",
    "dev:server": "webpack --watch --mode=development",
    "dev:frourio": "frourio --watch",
    "dev:prisma": "prisma generate --watch",
    "prebuild": "npm run generate",
    "build": "dotenv -e .env.production webpack --mode=production",
    "generate": "run-p generate:*",
    "generate:frourio": "frourio",
    "generate:prisma": "prisma generate",
    "migrate:dev": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "pm2:start": "pm2 start pm2.config.json --env production",
    "pm2:stop": "pm2 stop pm2.config.json",
    "pm2:delete": "pm2 delete pm2.config.json",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "start": "dotenv -e .env.production cross-env NODE_ENV=production node index.js",
    "seed": "ts-node --compiler-options {\\\"module\\\":\\\"CommonJS\\\"} ./prisma/seed.ts",
    "hash": "ts-node --compiler-options {\\\"module\\\":\\\"CommonJS\\\"} ./domain/init/hash.ts"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "11.1.1",
    "@fastify/jwt": "^7.2.2",
    "@fastify/multipart": "^8.0.0",
    "@prisma/client": "^5.3.1",
    "bcrypt": "^5.0.1",
    "bcrypt-nodejs": "^0.0.3",
    "class-validator": "^0.13.1",
    "dayjs": "^1.11.3",
    "decimal.js": "^10.3.1",
    "dotenv": "^8.2.0",
    "fastify": "4.24.3",
    "moment": "^2.29.1",
    "pm2": "^4.5.6",
    "redis": "3.1.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bcrypt-nodejs": "^0.0.31",
    "@types/busboy": "^0.2.3",
    "@types/redis": "2.8.32",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.1.0",
    "frourio": "^1.0.0",
    "nodemon-webpack-plugin": "^4.5.2",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.3.1",
    "shallow-equal-object": "^1.1.1",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^5.2.2",
    "webpack": "^5.35.0",
    "webpack-cli": "^4.6.0",
    "webpack-node-externals": "^3.0.0"
  },
  "volta": {
    "node": "16.13.2",
    "npm": "8.7.0"
  }
}
